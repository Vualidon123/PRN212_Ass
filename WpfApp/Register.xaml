<Window x:Class="WpfApp.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800">
    <Grid>
        <TextBox Name="EmailTextBox" VerticalAlignment="Top" Margin="20"/>
        <TextBox Name="NameTextBox" VerticalAlignment="Center" Margin="20" />
        <PasswordBox Name="PasswordBox" VerticalAlignment="Bottom" Margin="20" />
        <Button x:Name="RegisterButton" Content="Register" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Click="Button_Click"/>
    </Grid>
</Window>
